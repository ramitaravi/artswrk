generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your models here

model User {
  id                String    @id @default(cuid())
  uniqueid          String    @unique @default(cuid())
  email             String    @unique
  name              String?
  fullname          String?
  profilepicture    String?
  location          String?
  role              String    @default("user")
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  bookings          Booking[]
  postedJobs        Job[]     @relation("JobPoster")
  interestedInJobs  Job[]     @relation("InterestedArtists")
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("pending")
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id                String   @id @default(cuid())
  title            String
  description      String
  status          String   @default("open")
  userId          String
  user            User     @relation("JobPoster", fields: [userId], references: [id])
  interestedArtists User[]  @relation("InterestedArtists")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
